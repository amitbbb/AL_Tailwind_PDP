<div class="flex flex-wrap justify-between home-cate xs:pt-[60px] xs:pb-[0] xs:px-[20px] bg-[#E2E4E2] md:py-[80px] md:px-[30px] lg:py-[100px] lg:px-[70px] xl:py-[120px] xl:px-[150px]">
{% if section.settings.heading != blank %}
  <h2 class="md:hidden text-[17px] leading-[26px] max-w[250px] mx-auto weight-[300] text-center mb-[40px] ">{{ section.settings.heading }}</h2>
  {%endif%}
{% for block in section.blocks %}
  {% if block.settings.image != blank %}    
  <div class="flex md:flex-col xs:w-full lg:w-[27%] lg:flex-col xl:flex-col  justify-start text-center xs:flex-col-reverse md:flex-col{% if forloop.index == 2 %} md:flex-col-reverse lg:flex-col-reverse xl:flex-col-reverse xxl:flex-col-reverse xs: justify-end {% elsif forloop.last %} last-block{% endif %}">
   <div class="content-text-wrap"> 
      <h2 class=" font-[Compacta] weight-[400] xl:text-[45px] xl:leading-[62px] color-[#000] xl:m-0 {% if forloop.index == 2 %} xl:mt-[20px] {%endif%}">{{ block.settings.heading }}</h2>
      <p class="h-[100px] font-[Kepler] not-italic font-light text-[22px] leading-[26px] color-[000] flex mt-[50px] max-w[350px mr-auto]">{{ block.settings.text }}</p>
      <a class="shop-now" href="{{ block.settings.url }}">Shop Now</a>
    </div>
    <a class="square-image" href="{{ block.settings.url }}">
      {% assign img_url = block.settings.image | img_url: "master" %}
       <img class="lazyload w-full" 
       src="{{ img_url }}"
       data-src="{{ img_url }}"
       data-widths="[180, 360, 470, 600, 770, 970, 1060, 1280, 1512, 1728, 2048]"
       data-aspectratio="{{ img.aspect_ratio }}"
       data-sizes="auto" width="100" height="100">
    </a>
  </div>
  {% endif %}
{% endfor %}
</div>
{% schema %}
{
  "name": "Homepage Categories",
  "settings": [
      {
        "type": "text",
        "id": "heading",
        "label":"Main Heading",
        "default": "New Colors In Planters, Coasters And Everyone's Favorite Bookends Are Here"
      }
  ],
  "blocks": [
    {
      "type": "Category",
      "name": "Category Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label":"Category Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label":"Heading"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Small Description"
        },
        {
          "type": "url",
          "id": "url",
          "label":"Category URL"
        }
      ]
    }
  ],
  "presets" : [
    {
     "name": "Homepage Categories"
    }
  ]
}
{% endschema %}

