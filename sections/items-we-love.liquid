<section id="items-we-love">
    <div class="container">
        <div class="content">
            <h1>{{section.settings.heading}}</h1>
            {% assign collection_main = collections[section.settings.collection] %}           
            <div class="products">
                {% for product in collection_main.products %}
                <div class="product-items">
                    <div class="product-image">
                        <img src="{{ product | img_url:"master" }}" alt="" />
                    </div>
                    <div class="overlay">
                        <a href="{{section.settings.url}}">{{section.settings.add-to-bag}}</a>
                    </div>
                    <div class="product-content">
                        <ul class="vendor-info">
                            <li><a href="#">{{ product.vendor }}</a></li>
                            <li><a href="#">{{ product.price | money_with_currency }}</a></li>
                        </ul>
                        <p class="product-title">{{ product.title }}</p>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>



    {% schema %}
      {
        "name": "items we love",
        "tag": "section",
        "class": "section",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Title"
            },
            {
                "id": "collection",
                "type": "collection",
                "label": "Collections"
            },
            {
                "type": "text",
                "id": "add-to-bag",
                "label": "Button Title"
            },
            {
                "type": "url",
                "id": "url",
                "label": "Product Url"
            }
        ],
        "presets": [
          {
            "name": "items we love",
            "settings": {
            }
          }
        ]
      }
    {% endschema %}